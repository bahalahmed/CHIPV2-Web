# Development Environment Variables - State Specific APIs
VITE_KA_API_URL=https://dev-ka-api.chipv2.com/api/v1  # Karnataka Dev API
VITE_MH_API_URL=https://dev-mh-api.chipv2.com/api/v1  # Maharashtra Dev API  
VITE_RJ_API_URL=https://dev-rj-api.chipv2.com/api/v1  # Rajasthan Dev API

# Legacy URLs (for backward compatibility)
# VITE_API_URL=http://localhost:8000/api/v1  # Your backend (not running)
# VITE_API_URL=https://api.freeapi.app/api/v1  # External API (404 error)
VITE_API_URL=https://reqres.in/api  # Working external API
VITE_USE_MOCK_DATA=true  # Enable mock data for immediate login

# Development settings
VITE_ENV=development
VITE_DEBUG=true

# Password Security
VITE_PASSWORD_SALT=chipv2_dev_salt_key_2024_secure

# Optional: If your backend uses different port
# VITE_API_URL=http://localhost:3000/api/v1
# VITE_API_URL=http://localhost:5000/api/v1

# Optional: Enable mock data when backend is down
# VITE_USE_MOCK_DATA=true